<% if users.any? %>
  <p class="flex flex-wrap items-center mb-1 text-xs">
    <% users.each_with_index do |user, index| %>
      <% if users.length > 1 && index == users.length - 1 %>
        <span class="mx-1">&</span>
      <% end %>
      <%= render 'layouts/user', user: user %>
      <% if index < users.length - 2 %>
        <span class="mr-2">,</span>
      <% end %>
    <% end %>
    <span class="ml-1">
      <% if in_past %>
        <%= users.length > 1 || users.first.id == current_user.id ? "were " : "was " %>
      <% else %>
        <%= users.length > 1 || users.first.id == current_user.id ? "are " : "is " %>
      <% end %>
      <%= status %>
    </span>
  </p>
<% end %>
