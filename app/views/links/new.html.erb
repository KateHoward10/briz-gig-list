<%= render 'shared/back_button', label: @gig.summary, link: gig_path(@gig) %>

<h1 class="mb-6 text-xl font-bold">Add a link</h1>

<%= render 'shared/error_messages', record: @link %>

<%= form_with(
  model: [@gig, @gig.links.build],
  data: { controller: "link-form" }
) do |form| %>

  <%= render 'form_fields', form: form, gig: @gig %>

  <div class="flex justify-end">
    <%= submit_tag "Save", class: "border border-2 dark:border-gray-700 cursor-pointer rounded px-2 font-semibold hover:bg-gray-200 dark:hover:bg-gray-700" %>
  </div>
<% end %>
