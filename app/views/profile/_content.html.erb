<% if user.present? %>
  <div class="flex flex-col items-center my-12">
    <%= image_tag user.image, class: "rounded-full h-20 w-20" %>
    <p><%= user.name %></p>
    <% if user.id == current_user.id %>
      <p class="text-sm"><%= user.email %></p>
    <% end %>
  </div>
<% end %>

<%= render 'feed/list', actions_by_date: @actions_by_date %>
<%= paginate(@actions_by_date) %>
