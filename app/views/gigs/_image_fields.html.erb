<div class="mb-3">
  <%= form.hidden_field :image, readonly: true, "data-link-form-target": "image" %>
  <div class="flex flex-col justify-center hidden mx-auto my-2">
    <% unless gig.image.nil? %>
      <p class="text-sm text-center text-red-500">Please note, this will override the current gig image unless you remove it before saving</p>
    <% end %>
    <div class="relative flex flex-col items-center">
      <img data-link-form-target="preview" alt="<%= gig.summary %>" class="w-full h-full sm:w-1/2 md:w-1/3"/>
      <button type="button" title="Remove image" data-link-form-target="removeButton" data-action="click->link-form#removeImage" class="absolute top-0 right-0 p-1 rounded-full bg-slate-200 dark:bg-slate-700">
        <%= heroicon "trash", options: { class: "w-5 h-5" } %>
      </button>
    </div>
  </div>
</div>
