<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-xl font-bold">Upcoming gigs</h1>
    <%= link_to "Past gigs", gigs_past_path, class: "text-sm font-semibold text-blue-700 hover:underline" %>
  </div>
  <%= link_to "Add gig", new_gig_path, class: "font-semibold text-blue-700 hover:underline" %>
</div>
<% if @gigs.present? %>
  <ul>
    <% @gigs.each do |gig| %>
      <li class="mb-4">
        <%= link_to gig_path(gig.id), class: "hover:text-blue-700" do %>
          <p class="font-semibold"><%= gig.summary %>
          <p class="text-sm italic">
            <% if gig.start.date.present? %>
              <%= gig.start.date.strftime("%a %d %b") %>
            <% elsif gig.start.date_time.present? %>
              <%= gig.start.date_time.strftime("%a %d %b") %>
            <% end %>
          </p>
          <p class="text-sm"><%= gig.location.split(", ")[0] unless gig.location.nil? %></p>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-red-800">No gigs found</p>
<% end %>
