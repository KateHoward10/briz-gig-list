<%= render 'shared/back_button', label: @gig.summary, link: gig_path(@gig) %>

<div class="flex items-start justify-between mb-6">
  <h1 class="text-xl font-bold">Edit gig</h1>
  <%= link_to gig_path(@gig), "aria-label": "Delete gig", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this gig?" }, class: "flex items-center text-sm font-semibold text-red-800 dark:text-red-500"  do %>
    <%= heroicon "trash", options: { class: "w-4 h-4" } %>
    Delete gig
  <% end %>
</div>

<%= render 'form', gig: @gig %>
