<%= form_with(
  model: gig,
  class: "text-sm",
  data: {
    controller: "places link-form",
    action: "google-maps-callback@window->places#initMap"
  }
) do |form| %>
  <%= render 'shared/error_messages', record: gig %>

  <div class="mb-3">
    <%= form.label :summary, "Summary*" %>
    <%= form.text_field :summary, required: true, class: "w-full p-1" %>
  </div>

  <fieldset class="mb-3 flex justify-between">
    <div>
      <%= form.label :start_date, "Start*" %>
      <%= form.date_field :start_date, required: true, class: "p-1" %>
    </div>

    <div>
      <%= form.label :end_date, "End (optional)" %>
      <%= form.date_field :end_date, class: "p-1" %>
    </div>
  </fieldset>

  <div class="mb-3">
    <%= form.label :location, "Location*" %>
    <%= form.text_field :location, required: true, class: "w-full p-1", "data-places-target": "field" %>
  </div>

  <% unless @gig.id.present? %>
    <%= form.fields_for :links, @gig.links.build do |link_form| %>
      <div class="rounded border p-2 my-4" %>
        <h3 class="font-semibold mb-2">Include a link (optional)</h3>
        <%= link_form.hidden_field :user_id, value: current_user.id %>
        <%= render 'links/form_fields', form: link_form %>
      </div>
    <% end %>
  <% end %>

  <div class="flex justify-end">
    <%= form.submit "Save", class: "border border-2 cursor-pointer rounded px-2 font-semibold hover:bg-gray-200" %>
  </div>
<% end %>
